
@model DeviceExplorerPortal.Models.DeviceCreation

@{
    ViewBag.Title = "CreateDevice";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


<h2>Create device</h2>

<div id="DeviceCreationForm">
    @using (Html.BeginForm("CreateDevice", "Management"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Device creation</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PrimaryKey, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PrimaryKey, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PrimaryKey, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SecondaryKey, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SecondaryKey, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SecondaryKey, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AutoGenerateId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.AutoGenerateId, new { htmlAttributes = new { @id = "AutoGenerateIdCheckBox", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AutoGenerateId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AutoGenerateKey, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.AutoGenerateKey, new { htmlAttributes = new { @id = "AutoGenerateKeyCheckBox", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AutoGenerateKey, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="CreateDevice" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script>

    $(document).ready(function() {
        $('#AutoGenerateKeyCheckBox').change(function() {
            if ($(this).is(":checked")) {
                $(this).attr("checked", true);
                $.ajax({
                    type: "POST",
                    dataType: "json",
                    data: null,
                    url: "/Management/GenerateDeviceKeys",
                    success: function(result) {
                        populateKeys(result);
                    }
                });
            } else {
                populateEmptyKeys();
            }
        });

        $('#AutoGenerateIdCheckBox').change(function () {
            if ($(this).is(":checked")) {
                $(this).attr("checked", true);
                $.ajax({
                    type: "POST",
                    dataType: "json",
                    data: null,
                    url: "/Management/GenerateDeviceId",
                    success: function (result) {
                        populateId(result);
                    }
                });
            } else {
                populateId('');
            }
        });

        function populateKeys(result) {
            $('#PrimaryKey').val(result.PrimaryKey);
            $('#SecondaryKey').val(result.SecondaryKey);
        }

        function populateEmptyKeys() {
            $('#PrimaryKey').val('');
            $('#SecondaryKey').val('');
        }

        function populateId(result) {
            $('#Id').val(result);
        }
    })

</script>